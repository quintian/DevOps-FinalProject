                git branch: 'camel', credentialsId: 'camelCaseCurryPAT', url: 'https://github.com/camelCaseCurry/spring-petclinic'
            }
        }
        stage('Build') {
            steps {
                dir('/var/jenkins_home/workspace/finalproject') {
                    //sh "ls"
                    sh './mvnw clean install'
                }
            }
        }
        stage('Test') {
            steps {
                dir('/var/jenkins_home/workspace/finalproject')  {
                    sh './mvnw test'
                }
            }
        }
        stage('Static Analysis') {
            steps {
                script {
                    withSonarQubeEnv() {
